---
import "../styles/global.css";
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Pauvreté et Accessibilité Médicale en France</title>
  </head>
  <body class="bg-gray-50 min-h-screen">
    <!-- Navbar -->
    <nav class="bg-white border-b border-gray-200 sticky top-0 z-50 shadow-sm">
      <div class="max-w-7xl mx-auto px-6">
        <div class="flex justify-between items-center h-16">
          <div class="flex-shrink-0">
            <a
              href="/"
              class="text-xl font-bold text-gray-900 hover:text-blue-600 transition-colors"
            >
              Analyse Médicale France
            </a>
          </div>
          <div class="hidden md:flex items-center gap-8">
            <a
              href="#cartes"
              class="text-gray-600 hover:text-blue-600 font-medium transition-colors"
            >
              Cartes
            </a>
            <a
              href="#graphiques"
              class="text-gray-600 hover:text-blue-600 font-medium transition-colors"
            >
              Graphiques
            </a>
            <a
              href="#tableau"
              class="text-gray-600 hover:text-blue-600 font-medium transition-colors"
            >
              Tableau
            </a>
            <a
              href="#conclusion"
              class="text-gray-600 hover:text-blue-600 font-medium transition-colors"
            >
              Conclusion
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="min-h-screen">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-20">
      <div class="max-w-7xl mx-auto px-6 py-12">
        <div class="text-center">
          <p class="text-gray-900 font-semibold mb-2">
            Analyse de la pauvreté et de l'accessibilité médicale en France
          </p>
          <p class="text-gray-600 text-sm mb-4">
            Données et visualisations interactives
          </p>
          <div class="flex justify-center gap-6 text-sm text-gray-500">
            <a
              href="https://www.data.gouv.fr"
              target="_blank"
              class="hover:text-blue-600 transition-colors"
            >
              Source : data.gouv.fr
            </a>
            <span>•</span>
            <span>{new Date().getFullYear()}</span>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  html {
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    width: 100%;
    min-height: 100vh;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
      Ubuntu, Cantarell, sans-serif;
  }
</style>
